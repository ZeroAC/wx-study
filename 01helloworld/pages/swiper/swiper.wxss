.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0rpx;
    padding: 0rpx;
    width: 750rpx;
    height: 100vh;
    background-color: darkturquoise;
}
.movie-swiper{
    height: 810rpx;
    width: 100%;
}
.headLine{
    font-size:80rpx;
    font-style:bold;
    color:black;
    margin: 100rpx 0rpx;
}
.movie-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 750rpx;
    margin-top: 50rpx;
    background-color: rgba(255, 255, 255, 0.4);
}
.movie-text{
    width: 270rpx;
    height: 100%;
    font-size: 40rpx;
    color: darkred;
    font-weight: bold;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.flex-col{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.btnBackNow{
    position:absolute;
    top: 40rpx;
    right: 20rpx;
    color: brown;
    font-size: 30rpx;
    font-style: italic;
    border-style:dotted;
    padding: 10rpx;
}
